<%= render 'users/template', user: @user, book: @book %>
<% if flash[:notice] %>
<p><%= flash[:notice] %></p>
<% end %>

<div class="col-sm-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">
		<thead>
		</thead>
		<tbody>

		<% @books.each do |book| %>
			<tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpg',fallback: "no_image.jpg" %></td>

				<td><%= link_to book.title, book_path(book.id) %>
				</td>

				<td><%= book.body %></td>
			</tr>
		<% end %>
	</tbody>
	</table>
</div>


<div class="container">
	<div class="row content">
		<div class="col-xs-3">
			<h2>User info</h2>
			<div class="profile-image">
				<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th></th>
					</tr>
					<tr>
						<th><strong>name</strong></th>
						<th><% if user_signed_in? && current_user.id.to_s == params[:id] %>
						<%= current_user.name %>
						<% else %>
						<%= event.user.name %>
						<% end %>
						</th>
					</tr>
					<tr>
						<th><strong>Introduction</strong></th>
					</tr>
				</thead>
			</table>
				<%= link_to edit_user_path, class: "btn btn-default btn-block" do %>
					<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
				<% end %>

			<h2>New book</h2>

				<% if @book.errors.any? %>
				<p>error</p>
					<% @book.errors.full_messages.each do |message| %>
					<%= message %>
					<% end %>
				<% end %>

				<!-- form_for部分 -->
				<%= form_for(@book,url: '/books' ) do |f| %>

					<h4>title</h4>
					<%= f.text_field :title %>

					<h4>opinion</h4>
					<%= f.text_area :body %>

					<br><%= f.submit 'create Book' %>
				<% end %>
			</div>

		<div class="col-sm-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th>Title</th>
						<th>opinion</th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td>
						<%= book.title %>
						</td>
						<td>
						<%= book.body %>
						</td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>

		<div class="row">
			<div class="col-sm-4"></div>
			<div class="col-sm-4"></div>
			<div class="col-sm-4">CopyRight Infratop.inc</div>
		</div>
	</div>
</div>
<div class="col-xs-3">
	<%= render 'users/template', user: @user, book: @book %>
</div>
		
<div class="col-xs-9">
	<h2>Books</h2>
	<table class="table table-hover table-inverse">

		<thead>
			<tr>
				<th></th>
				<th>Title</th>
				<th>Opinion</th>
			</tr>
		</thead>

		<tbody>
			<% @books.each do |book| %>
				<tr>
					<%= link_to user_path(@user.id) do %>
					<td><%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpg',fallback: "no_image.jpg" %></td>
					<% end %>

					<td><%= link_to book.title, book_path(book.id) %>
					</td>

					<td><%= book.body %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
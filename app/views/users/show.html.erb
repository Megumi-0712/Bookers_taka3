<div class="row">

<%= render 'users/template', user: @user, book: @book %>


<div class="col-xs-9">
	<h2>Books detail</h2>
	<table class="table table-hover table-inverse">
		<thead>
		</thead>
		<tbody>

		<% @books.each do |book| %>
			<tr>
				<td><%= book.user.name %></td>

				<td><%= book.title %></td>

				<td><%= book.body %></td>

				<td><%= link_to"Edit", edit_book_path,class: "btn btn-success" %></td>
				<td><td><%= link_to"Destroy", book_path(:id), method: :delete, "data-confirm" => "本当に消しますか？",class: "btn btn-link" %></td></td>
			</tr>
		<% end %>
	</tbody>
	</table>
</div>
</div>

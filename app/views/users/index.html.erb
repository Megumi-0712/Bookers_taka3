<div class="row">

<%= render 'users/template', user: @user, book: @book %>

	<div class="col-sm-9">
		<h2>Users</h2>
		<table class="table">
			<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
					<tr>
						<td>
							<div class="img">
						  <%= attachment_image_tag user, :profile_image, :fill, 20, 20, format: 'jpg',fallback: "no_image.jpg" %>
						</div>
						</td>

						<td>
						  <%= user.name %>
						</td>
						<td>
						<%= link_to "Show", user_path(user.id) %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>


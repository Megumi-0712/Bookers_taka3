<div class="body">
	<div class= "container">
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag user, :profile_image, :fill, 40, 40,
	format: 'jpeg',fallback: "no_image.jpg" %>

					<table class="table">
						<tbody>
						<tr>
							<th>name</th><th><%= user.name %></th>
						</tr>

						<tr>
							<th>introduction</th><th><%= user.introduction %></th>
						</tr>
					</tbody>
					</table>

	<%= link_to "", edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>

	<h2>New book</h>
		<%= form_for(book,url: '/books' ) do |f| %>

	<div class="field row">
		<h4>title</h4>
		<%= f.text_field :title %>
	</div>
		
	<div class="field row">
		<h4>opinion</h4>
		<%= f.text_area :body %>
	</div>
		
		<%= f.submit 'Create Book',class: "btn btn-primary col-xs-12" %>
		<% end %>
	</div>
<h1><strong>Editing Book</strong></h1>

<% if @book.errors.any? %>
	<%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
	<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
	<% end %>
<% end %>

<!-- form_for部分 -->
<%= form_for(@book,url:"/books/#{@book.id}") do |f| %>

	<h3>Title</h3>
	<%= f.text_field :title%>

	<h3>Body</h3>
	<%= f.text_area :body %><br>

	<%= f.submit 'Update Book' %>
<% end %>


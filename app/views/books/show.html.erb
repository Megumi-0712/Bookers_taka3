<div class="col-xs-3">
	<%= render 'users/template', user: @user, book: @book_new %>
</div>

<div class="col-xs-9">
	<h2>Book detail</h2>
	<table class="table">
		<tbody>
			<tr>
				<td>
					<%= link_to user_path(@user.id) do %>
						<%= attachment_image_tag @user, :profile_image, :fill, 20, 20, format: 'jpg',fallback: "no_image.jpg" %>
						<br><%= @user.name %>
					<% end %>
				</td>

				<td>
					<%= @book.title %>
				</td>

				<td>
					<%= @book.body %>
				</td>

				<% if @book.user == current_user %>
				<td>
				<%= link_to"Edit", edit_book_path,class: "btn btn-success btn-xs" %>
				</td>

				<td><%= link_to"Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger btn-xs", "data-confirm" => "本当に消しますか？" %>
				</td>
				<% end %>
			</tr>
		</tbody>
	</table>
</div>